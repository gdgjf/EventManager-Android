<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/event_item_iv_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_item_banner_height"
        tools:src="@drawable/bg_splash" />

    <TextView
        android:id="@+id/event_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:layout_gravity="end|center_vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/event_item_iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left|center_vertical"
            tools:src="@drawable/bg_splash" />

        <ImageView
            android:id="@+id/event_item_iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:src="@drawable/bg_splash" />

        <ImageView
            android:id="@+id/event_item_iv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/event_item_iv_share"
            tools:src="@drawable/bg_splash" />

    </RelativeLayout>

</LinearLayout>